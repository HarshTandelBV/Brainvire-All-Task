<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_approval_form_view" model="ir.ui.view">
            <field name="name">sale.approval.form</field>
            <field name="model">sale.approval</field>
            <field name="arch" type="xml">
                <form string="sale_approval">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_name"/>
                                <field name="date_order"/>
                                <field name="amount_total"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_approval_tree_view" model="ir.ui.view">
            <field name="name">sale.approval.tree</field>
            <field name="model">sale.approval</field>
            <field name="arch" type="xml">
                <tree string="sale_approval">
                    <field name="name"/>
                    <field name="partner_name"/>
                    <field name="date_order"/>
                    <field name="amount_total"/>
                    <field name="currency_id" column_invisible="True"/>
                </tree>
            </field>
        </record>


        <record id="sale_approval_act_window" model="ir.actions.act_window">
            <field name="name">sale_approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.approval</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Approve Orders" id="menu_sale_approval" parent="sale.sale_order_menu"
                  groups="sales_approval_task.group_sales_manager_access" action="sale_approval_act_window"/>
    </data>
</odoo>