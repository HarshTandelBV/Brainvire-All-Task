<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="point_of_sale.PosSampleButton" owl="1">
        <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.onClick()">
            <i class="fa fa-superpowers" role="img" aria-label="Sample Button" title="Sample Button"/>
            Clear record
        </button>
        <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.removeAllRecord()">
            <i class="fa fa-superpowers" role="img" aria-label="Sample Button" title="Sample Button"/>
            CLear all
        </button>
    </t>
    <t t-name="point_of_sale.AddNotesButton">
        <button class="control-button o_sale_order_button btn btn-light rounded-0 fw-bolder" t-on-click="onAddItemNote">
            <i class="fa fa-solid fa-clipboard me-1" role="img" aria-label="Add Note" title="Add Note"/>
            Add item notes
        </button>
    </t>
    <t t-name="point_of_sale.OverallDiscount">
        <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="onOverallDiscount">
            <i class="fa fa-superpowers" role="img" aria-label="Discount" title="Discount"/>
            Overall Discount
        </button>
    </t>
</templates>
